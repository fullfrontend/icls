{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "array-bracket-spacing": [
            2,
            "never"
        ],
        "array-element-newline": [
            2,
            "always"
        ],
        "arrow-parens": 2,
        "arrow-body-style": 2,
        "arrow-spacing": 2,
        "brace-style": [
            2,
            "stroustrup"
        ],
        "block-scoped-var": 2,
        "camelcase": 2,
        "capitalized-comments": 2,
        "comma-dangle": 2,
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "comma-style": 2,
        "curly": 2,
        "dot-location": [
            2,
            "property"
        ],
        "dot-notation": 2,
        "eol-last": 2,
        "eqeqeq": 2,
        "func-call-spacing": 2,
        "func-style": 2,
        "function-paren-newline": [
            2,
            "multiline"
        ],
        "global-require": 2,
        "key-spacing": 2,
        "keyword-spacing": 2,
        "linebreak-style": 2,
        "lines-around-comment": [
            2,
            {
                "beforeBlockComment": true
            }
        ],
        "newline-per-chained-call": 2,
        "no-empty": 2,
        "no-empty-function": 2,
        "no-else-return": 2,
        "no-loop-func": 2,
        "no-multi-str": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 2,
        "no-use-before-define": 2,
        "no-whitespace-before-property": 2,
        "object-curly-newline": 2,
        "object-curly-spacing": 2,
        "quotes": [
            2,
            "single"
        ],
        "semi": 2,
        "semi-style": 2,
        "semi-spacing": 2,
        "space-in-parens": 2,
        "space-before-function-paren": 2,
        "space-before-blocks": [
            2,
            "always"
        ],
        "space-infix-ops": 2,
        "space-unary-ops": [
            2,
            {
                "words": true,
                "nonwords": false
            }
        ],
        "strict": 2,
        "switch-colon-spacing": 2,
        "yoda": 2
    }
}
